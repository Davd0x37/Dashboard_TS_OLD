{
  "name": "api.node",
  "version": "1.0.0",
  "description": "Dashboard written in TypeScript",
  "repository": "git@gitlab.com:DevDigitalNomad/DashboardTS.git",
  "author": "DigitalNomad",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "parcel ./src/GraphQLApp.ts --target node --no-source-maps",
    "prod": "parcel build ./src/GraphQLApp.ts --target node --no-source-maps --no-cache",
    "serve": "nodemon ./dist/GraphQLApp.js",
    "test:watch": "jest --watch",
    "test": "jest"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.16.0",
    "@types/helmet": "^0.0.42",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.2",
    "@types/pouchdb": "6.3.2",
    "@types/request": "^2.48.0",
    "@types/rethinkdb": "^2.3.13",
    "@types/signale": "^1.2.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.5",
    "parcel-bundler": "^1.10.3",
    "prettier": "^1.14.3",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint-config-prettier": "^1.15.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "argon2": "^0.19.3",
    "axios": "^0.18.0",
    "cookie-parser": "^1.4.3",
    "express": "^4.16.4",
    "graphql-tag": "^2.10.0",
    "graphql-yoga": "^1.16.7",
    "helmet": "^3.14.0",
    "lodash": "^4.17.11",
    "pouchdb-adapter-memory": "^7.0.0",
    "pouchdb": "7.0.0",
    "request": "^2.88.0",
    "rethinkdb": "^2.3.3",
    "rxdb": "8.0.3",
    "rxjs": "^6.3.3",
    "signale": "^1.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/**/**/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
