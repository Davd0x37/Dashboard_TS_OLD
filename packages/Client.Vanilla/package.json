{
  "name": "client.vanilla",
  "version": "0.1.0",
  "description": "Dashboard written in TypeScript",
  "repository": "git@gitlab.com:DevDigitalNomad/DashboardTS.git",
  "author": "DigitalNomad",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "parcel src/index.html -p 3030",
    "build": "parcel build src/index.html --no-content-hash",
    "dev:build": "ts-node build -w",
    "prod:build": "ts-node build",
    "test:watch": "jest --watch",
    "test": "jest"
  },
  "devDependencies": {
    "@types/chart.js": "^2.7.35",
    "@types/graphql": "^14.0.0",
    "@types/jest": "^23.3.2",
    "@types/lodash": "^4.14.116",
    "@types/node": "^10.10.3",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-runtime": "^6.23.0",
    "commander": "^2.18.0",
    "graphql": "^14.0.2",
    "jest": "^23.6.0",
    "node-sass": "^4.9.3",
    "parcel-bundler": "^1.10.0",
    "prettier": "^1.14.3",
    "ts-jest": "^23.10.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "apollo-boost": "^0.1.16",
    "chart.js": "^2.7.2",
    "graphql-tag": "^2.9.2",
    "lodash": "^4.17.11",
    "reflect-metadata": "^0.1.12"
  },
  "babel": {
    "plugins": [
      [
        "transform-runtime",
        {
          "polyfill": false,
          "regenerator": true
        }
      ]
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/**/**/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
