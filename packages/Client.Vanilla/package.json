{
  "name": "client.vanilla",
  "version": "0.1.0",
  "description": "Dashboard written in TypeScript",
  "repository": "git@gitlab.com:DevDigitalNomad/DashboardTS.git",
  "author": "DigitalNomad",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "parcel src/index.html -p 3030 --no-source-maps",
    "build": "parcel build src/index.html --no-content-hash --no-source-maps",
    "dev:build": "ts-node build -w",
    "prod:build": "ts-node build",
    "test:watch": "jest --watch",
    "test": "jest"
  },
  "devDependencies": {
    "@types/chart.js": "2.7.37",
    "@types/graphql": "14.0.2",
    "@types/jest": "23.3.5",
    "@types/lodash": "4.14.117",
    "@types/node": "10.11.6",
    "babel-core": "6.26.3",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-polyfill": "6.26.0",
    "commander": "2.19.0",
    "graphql": "14.0.2",
    "husky": "1.1.1",
    "jest": "23.6.0",
    "node-sass": "4.9.3",
    "parcel-bundler": "1.10.2",
    "prettier": "1.14.3",
    "ts-jest": "23.10.4",
    "ts-node": "7.0.1",
    "tslint-config-prettier": "1.15.0",
    "tslint": "5.11.0",
    "typescript": "3.1.1"
  },
  "dependencies": {
    "apollo-boost": "0.1.16",
    "chart.js": "2.7.2",
    "graphql-tag": "2.10.0",
    "lodash": "4.17.11",
    "pouchdb-adapter-idb": "7.0.0",
    "reflect-metadata": "0.1.12",
    "rxdb": "8.0.2",
    "rxjs": "6.3.3",
    "sanitize.css": "8.0.0",
    "sweetalert2": "^7.28.4"
  },
  "babel": {
    "plugins": [
      [
        "transform-runtime",
        {
          "polyfill": false,
          "regenerator": true
        }
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test",
      "pre-push": "yarn test"
    }
  }
}
