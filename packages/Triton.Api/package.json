{
  "name": "api.node",
  "version": "1.1.0",
  "description": "Dashboard written in TypeScript",
  "repository": "git@gitlab.com:DevDigitalNomad/DashboardTS.git",
  "author": "DigitalNomad",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "bundler -t node -d",
    "build": "bundler -t node",
    "serve": "nodemon build/app/App.js",
    "doc": "run-s doc:html && opn build/docs/index.html",
    "doc:html": "typedoc app/ --target ES6 --mode file --out build/docs",
    "fix": "run-s fix:*",
    "fix:tslint": "tslint --fix --project .",
    "fix:prettier": "prettier \"app/**/*.ts\" --write",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.16.0",
    "@types/helmet": "^0.0.42",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.2",
    "@types/request": "^2.48.0",
    "@types/rethinkdb": "^2.3.13",
    "@types/signale": "^1.2.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.5",
    "npm-run-all": "4.1.3",
    "opn-cli": "3.1.0",
    "prettier": "^1.14.3",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint-config-prettier": "^1.15.0",
    "tslint-immutable": "4.9.1",
    "tslint": "^5.11.0",
    "typedoc": "0.13.0",
    "typescript": "^3.1.6",
    "webpack-node-externals": "1.7.2"
  },
  "dependencies": {
    "argon2": "^0.19.3",
    "cookie-parser": "^1.4.3",
    "express": "^4.16.4",
    "graphql-tag": "^2.10.0",
    "graphql-yoga": "^1.16.7",
    "helmet": "^3.14.0",
    "lodash": "^4.17.11",
    "module-alias": "2.1.0",
    "request": "^2.88.0",
    "rethinkdb": "^2.3.3",
    "signale": "^1.3.0"
  },
  "_moduleAliases": {
    "#"      : ".",
    "#SH"      : "../Triton.Shared"
  }
}
