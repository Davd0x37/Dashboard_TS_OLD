{
  "name": "@triton/api",
  "version": "1.1.0",
  "description": "Triton API",
  "repository": "git@gitlab.com:Vrnon/liquidash.git",
  "author": "Vernon",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "serve": "NODE_ENV=production nodemon build/app/App.js",
    "serve:test": "NODE_ENV=test nodemon build/app/App.js",
    "doc": "run-s doc:html && opn build/docs/index.html",
    "doc:html": "typedoc app/ --target ES6 --mode file --out build/docs",
    "fix": "run-s fix:*",
    "fix:tslint": "tslint --fix --project .",
    "fix:prettier": "prettier \"app/**/*.ts\" --write",
    "test": "NODE_ENV=test jest --runInBand --detectOpenHandles",
    "test:watch": "NODE_ENV=test jest --watch --runInBand --detectOpenHandles"
  },
  "engines": {
    "node": ">=10"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.17",
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.16.0",
    "@types/got": "^9.3.0",
    "@types/helmet": "^0.0.42",
    "@types/ioredis": "4.0.4",
    "@types/jest": "23.3.12",
    "@types/jsonwebtoken": "8.3.0",
    "@types/node": "10.12.18",
    "@types/signale": "^1.2.0",
    "@types/ws": "6.0.1",
    "jest": "23.6.0",
    "module-alias": "2.1.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "4.1.5",
    "opn-cli": "4.0.0",
    "prettier": "1.15.3",
    "ts-jest": "23.10.5",
    "ts-node": "7.0.1",
    "tslint": "5.12.0",
    "tslint-config-prettier": "1.17.0",
    "tslint-immutable": "5.0.1",
    "typedoc": "0.14.0",
    "typescript": "3.2.2"
  },
  "dependencies": {
    "argon2": "^0.20",
    "cookie-parser": "^1.4.3",
    "dotenv": "6.2.0",
    "express": "^4.16.4",
    "got": "^9.5.0",
    "graphql-tag": "^2.10.0",
    "graphql-yoga": "^1.16.9",
    "helmet": "^3.15.0",
    "ioredis": "^4.3.0",
    "jsonwebtoken": "8.4.0",
    "lodash": "4.17.11",
    "node-vault": "^0.9.5",
    "pg": "^7.7.1",
    "pug": "2.0.3",
    "reflect-metadata": "^0.1.12",
    "signale": "^1.3.0",
    "typeorm": "^0.2.11"
  },
  "_moduleAliases": {
    "@": "build/app"
  }
}
