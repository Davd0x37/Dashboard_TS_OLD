{
  "name": "dashboard",
  "version": "0.1.0",
  "description": "Dashboard written in TypeScript",
  "repository": "git@gitlab.com:DevDigitalNomad/DashboardTS.git",
  "author": "DigitalNomad",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "api:serve": "cd ./packages/Api.Node && yarn run dev",
    "api:build": "cd ./packages/Api.Node && yarn run prod",
    "api:test": "cd ./packages/Api.Node && yarn run test",
    "api:test-watch": "cd ./packages/Api.Node && yarn run test:watch",
    "client:serve": "cd ./packages/Client.Vue && yarn run serve",
    "client:build": "cd ./packages/Client.Vue && yarn run build",
    "client:lint": "cd ./packages/Client.Vue && yarn run lint",
    "client:test:unit": "cd ./packages/Client.Vue && yarn run test:unit",
    "client:test:e2e": "cd ./packages/Client.Vue && yarn run test:e2e",
    "client_vanilla:serve": "cd ./packages/Client.Vanilla && yarn run dev",
    "client_vanilla:build": "cd ./packages/Client.Vanilla && yarn run prod",
    "client_vanilla:test": "cd ./packages/Client.Vanilla && yarn run test",
    "client_vanilla:test-watch": "cd ./packages/Client.Vanilla && yarn run test:watch",
    "deploy": "docker-compose up",
    "serve": "cd ./packages/Api.Node && yarn run serve"
  },
  "devDependencies": {
    "lerna": "^3.4.0"
  }
}
