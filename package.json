{
	"name": "dashboard",
	"version": "0.0.3",
	"description": "Dashboard written in TypeScript",
	"repository": "git@gitlab.com:DevDigitalNomad/DashboardTS.git",
	"author": "DigitalNomad",
	"license": "MIT",
	"private": true,
	"workspaces": [ "app/api", "app/client" ],
	"scripts": {
		"test": "jest",
		"test:watch": "jest --watch",
		"api:dev": "cross-env NODE_ENV=development webpack --config app/api/webpack.config.ts --watch",
		"api:prod": "cross-env NODE_ENV=production webpack --config app/api/webpack.config.ts"
	},
	"devDependencies": {
		"@types/jest": "latest",
		"jest": "latest",
		"ts-jest": "latest",
		"ts-node": "latest",
		"tslint-config-prettier": "latest",
		"tslint": "latest",
		"typescript": "latest"
	},
	"jest": {
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(/app/(api|client)/src/test/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
		"moduleFileExtensions": [ "ts", "tsx", "js", "jsx", "json", "node" ]
	}
}
