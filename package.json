{
  "name": "dashboard",
  "version": "0.0.7",
  "description": "Dashboard written in TypeScript",
  "repository": "git@gitlab.com:DevDigitalNomad/DashboardTS.git",
  "author": "DigitalNomad",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "app/api",
    "app/client"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "api:dev": "cd ./app/api && yarn run dev",
    "api:prod": "cd ./app/api && yarn run prod",
    "client:dev": "cd ./app/client && yarn run dev",
    "client:prod": "cd ./app/client && yarn run prod",
    "serve": "cd ./app/api && yarn run serve",
    "deploy": "docker-compose up"
  },
  "devDependencies": {
    "@types/jest": "23.3.1",
    "dts-gen": "0.5.7",
    "jest": "23.4.2",
    "prettier": "1.14.0",
    "ts-jest": "23.0.1",
    "ts-node": "7.0.0",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.14.0",
    "typescript": "3.0.1"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./app/client/tsconfig.json"
      }
    },
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/app/(api|client)/(src/__test__|__test__)/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
