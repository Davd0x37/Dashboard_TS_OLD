{
  "name": "dashboard",
  "version": "0.0.7",
  "description": "Dashboard written in TypeScript",
  "repository": "git@gitlab.com:DevDigitalNomad/DashboardTS.git",
  "author": "DigitalNomad",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "app/api",
    "app/client"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "api:dev": "cd ./app/api && yarn run dev",
    "api:prod": "cd ./app/api && yarn run prod",
    "client:dev": "cd ./app/client && yarn run dev",
    "client:prod": "cd ./app/client && yarn run prod",
    "serve": "cd ./app/api && yarn run serve",
    "deploy": "docker-compose up"
  },
  "devDependencies": {
    "@types/jest": "^23.1.1",
    "dts-gen": "^0.5.7",
    "jest": "^23.2.0",
    "prettier": "^1.13.6",
    "ts-jest": "^22.4.6",
    "ts-node": "^7.0.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./app/client/tsconfig.json"
      }
    },
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/app/(api|client)/(src/test|test)/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
